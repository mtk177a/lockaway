<h1><%= action_name.capitalize %> Reward</h1>

<%= form_with(model: [:admin, @reward], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :condition_type %>
    <%= form.select :condition_type, Reward.condition_types.keys.map { |k| [k.humanize, k] }, {}, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :threshold %>
    <%= form.number_field :threshold, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to 'Back', admin_rewards_path, class: 'btn btn-secondary' %>
